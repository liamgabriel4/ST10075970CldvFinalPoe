@model CldvFinalTest.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1>Order Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.Order_Id</dd>

        <dt class="col-sm-2">User Name</dt>
        <dd class="col-sm-10">@Model.User_Name</dd>

        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@Model.Product_ID</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.Order_Date</dd>

        <dt class="col-sm-2">Order Location</dt>
        <dd class="col-sm-10">@Model.Order_Location</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Order_Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
