@model IEnumerable<CldvFinalTest.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User Name</th>
            <th>Product ID</th>
            <th>Order Date</th>
            <th>Order Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Order_Id</td>
                <td>@item.User_Name</td>
                <td>@item.Product_ID</td>
                <td>@item.Order_Date</td>
                <td>@item.Order_Location</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Order_Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Order_Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Order_Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Order</a>

