@model IEnumerable<CldvFinalTest.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product_Name</td>
                <td>@item.Description</td>
                <td>@item.Location</td>
                <td><img src="@item.ImageUrl" alt="@item.Product_Name" width="100" /></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Product_Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Product_Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Product_Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


